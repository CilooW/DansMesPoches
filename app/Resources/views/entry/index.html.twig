{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entries list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Amount</th>
                <th>Isfixed</th>
                <th>Isspending</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entry in entries %}
            <tr>
                <td><a href="{{ path('entry_show', { 'id': entry.id }) }}">{{ entry.id }}</a></td>
                <td>{{ entry.label }}</td>
                <td>{{ entry.amount }}</td>
                <td>{% if entry.isFixed %}Yes{% else %}No{% endif %}</td>
                <td>{% if entry.isSpending %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entry_show', { 'id': entry.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entry_edit', { 'id': entry.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entry_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
